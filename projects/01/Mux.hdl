/** 
 * Multiplexor:
 * if (sel == 0) out = a, else out = b
 */
CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
        Not(in = sel, out = notSelOut);
        And(a = a, b = notSelOut, out = aAndNotSelOut);
        And(a = b, b = sel, out = bAndSelOut);
        Or(a = aAndNotSelOut, b = bAndSelOut, out = out);
}